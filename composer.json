{
    "name": "kuria/php-highlighter",
    "description": "PHP code highlighter",
    "keywords": ["php", "highlighter", "highlight_file", "highlight_string"],
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "kuria/simple-html-parser": "^2.0"
    },
    "require-dev": {
        "kuria/dev-meta": "^0.4.0"
    },
    "autoload": {
        "psr-4": {
            "Kuria\\PhpHighlighter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kuria\\PhpHighlighter\\": "tests"
        }
    }
}